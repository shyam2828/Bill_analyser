<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.BillFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/profile_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_marginLeft="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginStart="25dp"/>


        </androidx.appcompat.widget.Toolbar>








    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:id="@+id/enter"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:hint="Product" />
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTitle"
            android:textSize="15dp"
            android:hint="Quantity" />

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDescription"
            android:layout_marginTop="5dp"
            android:background="#FF9800"
            android:layout_marginLeft="50dp"
            android:text="  Add Product  "
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnAddItem"
            android:text="Calculate Bill"
            android:id="@+id/calculate"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/etDescription"
            android:layout_marginLeft="50dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/enter"
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/table"
            android:weightSum="5">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="PRODUCT"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="QUANTITY"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="RS/KG"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="RATE"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="STATUS"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fill_items"
            android:layout_width="match_parent"
            android:layout_below="@+id/table"
            android:layout_height="250dp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/fill_items"
            android:id="@+id/view_total"
            android:weightSum="2">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="TOTAL"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:id="@+id/total"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text=""/>

        </TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/review"
            android:layout_below="@+id/view_total"
            android:layout_alignParentRight="true"
            android:text="REVIEW BILL"/>
    </RelativeLayout>



















</RelativeLayout>